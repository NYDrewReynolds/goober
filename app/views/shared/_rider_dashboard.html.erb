<div class="row">
  <% if current_ride %>
      <%= render :partial => "rides/current_ride", locals: {ride: current_ride} %>
  <% else %>
      <div class="col-md-4 col-md-offset-4 text-center">
        <%= button_to 'Request a Ride', new_ride_path, class: 'btn btn-success btn-lg', type: 'button', method: 'get' %>
      </div>
  <% end %>
</div>
